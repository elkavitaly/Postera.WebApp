@using Postera.WebApp.Resources
@model SearchParameters
@{
    ViewData["Title"] = "OrdersTemplate";
    Layout = "_Layout";
}

<div class="row w-100">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Type" />
    <div class="col-lg-12">
        <div class="search-container">
            <div class="search-header">
                <p>Search</p>
            </div>
            <div class="search-body">
                <div class="search-input-container">
                    <input type="text" id="searchText" class="form-control" />
                </div>
                <div class="search-buttons">
                    <button type="button" id="searchButton" class="btn-outline-primary form-control">Search</button>
                    <button type="button" id="cleanButton" class="btn-outline-danger form-control">Clean</button>
                </div>
            </div>
        </div>
        <h2 class="title-1 m-b-25">@Resources.LatestOrders</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>@Resources.Date</th>
                        <th>@Resources.OrderId</th>
                        <th class="text-right">@Resources.Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="orders">
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="/js/changeStatusComponent.js"></script>
    <script>
        var tableBody = document.querySelector("#orders");
        registerChangeStatusComponent(tableBody, "@Model.Id", "@Model.Type");
        getOrders("@Model.Id", "@Model.Type");
        registerOrderModal();
        registerOrderSearch();
    </script>
}
@using Postera.WebApp.Data.Enums
@using Postera.WebApp.Resources
@model Postera.WebApp.Data.Models.Storage
@{
    Layout = null;
}

<form class="storage-section-form">
    <div class="col-lg-11">
        <div class="card-body card-block">
            <div class="form-group">
                <label for="name" class=" form-control-label">@Resources.Storage</label>
                <input type="text" asp-for="Name" placeholder="@Resources.EnterName" class="form-control">
            </div>
            <div class="form-group">
                <label for="type" class=" form-control-label">@Resources.Type</label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<StorageType>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="square" class=" form-control-label">@Resources.Square</label>
                <input type="number" asp-for="Square" class="form-control">
            </div>
            <div class="row form-group">
                <div class="col-8">
                    <div class="form-group">
                        <label for="country" class=" form-control-label">@Resources.Country</label>
                        <input type="text" asp-for="Address.Country" placeholder="@Resources.EnterCountry" class="form-control">
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="city" class=" form-control-label">@Resources.City</label>
                        <input type="text" asp-for="Address.City" placeholder="@Resources.EnterCity" class="form-control">
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="street" class=" form-control-label">@Resources.Street</label>
                        <input type="text" asp-for="Address.Street" placeholder="@Resources.EnterStreet" class="form-control">
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="house" class=" form-control-label">@Resources.BuildingNumber</label>
                        <input type="text" asp-for="Address.House" placeholder="@Resources.EnterBuildingNumber" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button class="removeStorageButton btn btn-danger">@Resources.Remove</button>
        </div>
    </div>
</form>
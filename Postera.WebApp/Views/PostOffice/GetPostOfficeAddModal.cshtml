@using Postera.WebApp.Resources
@model Postera.WebApp.Data.Models.PostOffice
@{
    Layout = null;
}

<div class="modal fade" id="scrollmodal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="addForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="scrollmodalLabel">@Resources.PostOffice</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body d-flex justify-content-center">
                    <div class="col-lg-11">
                        <div class="card-body card-block">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="company" class=" form-control-label">@Resources.Company</label>
                                <input type="text" asp-for="Name" placeholder="@Resources.EnterName" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="vat" class=" form-control-label">@Resources.Email</label>
                                <input type="email" asp-for="Email" placeholder="@Resources.EnterEmail" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="street" class=" form-control-label">@Resources.Phone</label>
                                <input type="tel" asp-for="Phone" placeholder="@Resources.EnterPhone" class="form-control">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="row form-group">
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="city" class=" form-control-label">@Resources.Country</label>
                                        <input type="text" asp-for="Address.Country" placeholder="@Resources.EnterCountry" class="form-control">
                                        <span asp-validation-for="Address.Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="postal-code" class=" form-control-label">@Resources.City</label>
                                        <input type="text" asp-for="Address.City" placeholder="@Resources.EnterCity" class="form-control">
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="postal-code" class=" form-control-label">@Resources.Street</label>
                                        <input type="text" asp-for="Address.Street" placeholder="@Resources.EnterStreet" class="form-control">
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="postal-code" class=" form-control-label">@Resources.BuildingNumber</label>
                                        <input type="text" asp-for="Address.House" placeholder="@Resources.EnterBuildingNumber" class="form-control">
                                        <span asp-validation-for="Address.House" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="create" class="btn btn-primary">@Resources.Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
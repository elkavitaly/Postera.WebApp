@using Postera.WebApp.Resources
@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">order</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <a asp-action="CreateOrder" asp-controller="Order">
                    <button class="au-btn au-btn-icon au-btn--green au-btn--small" id="addItemButton">
                        <i class="zmdi zmdi-plus"></i>@Resources.AddItem
                    </button>
                </a>
            </div>
        </div>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>@Resources.OrderId</th>
                        <th>@Resources.Status</th>
                        <th>@Resources.Price</th>
                        <th>@Resources.ArriveDate</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="orders">
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        getUserOrders();
        registerOrderModal();
        let table = document.querySelector("#orders");
        addUserOrderDeleteButton(table, "orders");
    </script>
}

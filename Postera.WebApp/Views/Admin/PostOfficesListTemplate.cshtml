@model string
<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">data table</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <button class="au-btn au-btn-icon au-btn--green au-btn--small" id="addItemButton">
                    <i class="zmdi zmdi-plus"></i>add item
                </button>
            </div>
        </div>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>name</th>
                        <th>email</th>
                        <th>address</th>
                    </tr>
                </thead>
                <tbody id="itemsList">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        getItemsList("@Model");
        registerAddModal("@Model");
    </script>
}